<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_cardview">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="6dp"
        android:background="@drawable/bg_cardview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@+id/home_tempeture_layout"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/alarm_setting_health_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:layout_marginStart="22dp"
            android:text="@string/good"
            android:textColor="@color/purple_500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/alarm_setting_health_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/health"
            android:textColor="#6A6A6A"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/alarm_setting_health_text"
            app:layout_constraintStart_toStartOf="@+id/alarm_setting_health_text"
            app:layout_constraintTop_toBottomOf="@+id/alarm_setting_health_text" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/home_tempeture_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/bg_cardview"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/alarm_setting_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"

            android:text="@string/_28_9_c"
            android:textColor="@color/orange_500"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alarm_setting_temperature_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/temperature"
            android:textColor="#6A6A6A"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/alarm_setting_temperature_text"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/alarm_setting_temperature_text"
            app:layout_constraintTop_toBottomOf="@+id/alarm_setting_temperature_text" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/home_voltage_layout"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_cardview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/home_voltage_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/open_sans"
            android:padding="1dp"
            android:text="0.00 V"
            android:textColor="@color/orange_500" />

        <TextView
            android:id="@+id/home_voltage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="1dp"
            android:text="voltage"
            android:textColor="#6A6A6A"
            android:textSize="12sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:padding="6dp"
        android:background="@drawable/bg_cardview"
        app:layout_constraintEnd_toEndOf="@+id/home_voltage_layout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/home_voltage_layout"
        app:layout_constraintTop_toBottomOf="@+id/home_voltage_layout">

        <TextView

            android:id="@+id/home_charge_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/open_sans"
            android:padding="1dp"
            android:text="@string/unplugged"
            android:textColor="@color/purple_500" />

        <TextView
            android:id="@+id/home_charge_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="2dp"
            android:text="Charged Status"
            android:textColor="#6A6A6A"
            android:textSize="12sp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>